{% extends "admin/layout.twig" %}
{% block html_title %}Posts - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'posts' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Postagens</li>
</ol>
{% endblock %}
{% block content %}

<div class="card">
  <div class="card-header" data-background-color="blue">
    <div class="row">
      <div class="col-sm-8">
        <h3>Postagens</h3>
      </div>
      <div class="col-sm-4">
        <p class="pull-right">
          <a class="btn btn-success" href="{{ base_url() }}/admin/posts/add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </a>
        </p>
      </div>

    </div>

  </div>
  <div class="card-content">
    <div class="row">
      <div class="col-xs-12">
        {% if posts %}
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Destaque</th>
                  <th>Nome</th>
                  <th>Criado em</th>

                  <th class="th-button" style="width:100px;"></th>
                  <th class="th-button" style="width:100px;"></th>
                </tr>
              </thead>
              <tbody>
                {% for post in posts %}
                <tr>
                  <td style="width:150px;">
                    <img src="{{ base_url() }}/{{ post.img_featured }}" style="width:100%">
                  </td>
                  <td>
                    <a href="{{ base_url() }}/admin/posts/{{ post.id }}">
                      {{ post.name }}
                    </a>
                  </td>
                  <td>{{ post.created_at }}</td>

                  <td>
                    <a class="btn btn-xs btn-default" href="{{ base_url() }}/admin/posts/edit/{{ post.id }}">
                      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                    </a>
                  </td>
                  <td>
                    <a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/posts/delete/{{ post.id }}">
                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
                    </a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem posts cadastrados</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>



{% endblock %}
