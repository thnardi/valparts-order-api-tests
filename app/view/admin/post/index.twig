{% extends "admin/layout.twig" %}
{% block html_title %}Posts - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'posts' %}
{% set subnav_active = 'posts' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Postagens</li>
</ol>
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-xs-12 col-sm-4">
    <p class="">
      <a class="btn btn-success" href="{{ base_url() }}/admin/posts/add">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Cadastrar
      </a>
    </p>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading" >
    <div class="row">
      <div class="col-xs-12">
        <p class="panel-title">Postagens</p>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        {% if posts %}
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Destaque</th>
                  <th>Nome</th>
                  <th>Criado em</th>
                  <th class="th-button" style="width:150px; text-align:center;">Ações</th>
                </tr>
              </thead>
              <tbody>
                {% for post in posts %}
                  <tr>
                    <td style="width:70px;">
                      <img src="{{ base_url() }}/{{ post.img_featured }}" style="width:100%">
                    </td>
                    <td>
                      <a href="{{ base_url() }}/admin/posts/{{ post.id }}">
                        {{ post.name }}
                      </a>
                    </td>
                    <td>{{ post.created_at }}</td>
                    <td style="width:150px;">
                      <center>
                        <a class="btn btn-sm btn-default" style="margin-top:2px; margin-bottom:2px;" href="{{ base_url() }}/admin/posts/edit/{{ post.id }}">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-sm btn-danger" style="margin-top:2px; margin-bottom:2px;" href="{{ base_url() }}/admin/posts/delete/{{ post.id }}">
                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                      </center>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem posts cadastrados</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% endblock %}
