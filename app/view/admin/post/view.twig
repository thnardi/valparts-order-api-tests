{% extends "admin/layout.twig" %}
{% block html_title %}{{ user.name }} - Usuários - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'posts' %}
{% set subnav_active = 'posts' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/posts">Usuários</a></li>
  <li class="active">{{ user.name }}</li>
</ol>
{% endblock %}
{% block content %}


  <div class="pull-right">
    <a class="btn btn-primary" href="{{ base_url() }}/admin/posts/edit/{{ post.id }}">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a class="btn btn-danger" href="{{ base_url() }}/admin/posts/delete/{{ post.id }}">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
  </div>
  <h1>{{ post.name }}</h1>


<div class="row">
  <div class="col-md-10">
    <ul class="list-group">
      <li class="list-group-item"><strong>{{ post.img_featured }}</strong></li>
      <li class="list-group-item">Nome: <strong>{{ post.name }}</strong></li>
      <li class="list-group-item">Categoria: <strong>{{ post.id_post_type }}</strong></li>
      <li class="list-group-item">Criado em: <strong>{{ post.created_at }}</strong></li>
      <li class="list-group-item">Descricao: <strong>{{ post.description }}</strong></li>

    </ul>
  </div>

</div>

{% endblock %}
