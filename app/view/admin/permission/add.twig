{% extends "admin/layout.twig" %}
{% block html_title %}Permissões - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'permission' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/permission">Permissões</a></li>
  <li class="active">Adicionar</li>
</ol>
{% endblock %}
{% block content %}

<div class="card">
  <div class="card-header" data-background-color="blue">
    <h3>Adicionar Permissão</h3>
  </div>
  <div class="card-content">
    <div class="row">
      <div class="col-md-6">
        <form role="form" data-toggle="validator" action="{{ base_url() }}/admin/permission/add" method="POST">
          <input class="form-control form-group" type="text" name="resource" placeholder="Rota">
          <input class="form-control form-group" type="text" name="description" placeholder="Descrição" required>
          <select class="form-control form-group" name="role_id">
          {% for role in roles %}
            <option value="{{ role.id }}">{{ role.description }}</option>
          {% endfor %}
          </select>
          <button type="submit" class="btn btn-success">Adicionar</button>
        </form>
      </div>
    </div>
  </div>

</div>


{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}
