{% extends "admin/layout.twig" %}
{% block html_title %}Cargos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'role' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Cargos</li>
</ol>
{% endblock %}
{% block content %}

<div class="card">
  <div class="card-header" data-background-color="blue">
    <div class="row">
      <div class="col-sm-8">
        <h3>Cargos</h3>
      </div>
      <div class="col-sm-4">
        <p class="pull-right">
          <a class="btn btn-success" href="{{ base_url() }}/admin/role/add">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          </a>
        </p>
      </div>
    </div>
  </div>

  <div class="card-content">
    <div class="row">
      <div class="col-xs-12">
        {% if roles %}
          <table class="table table-striped data-table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Slug</th>
              <th>Nível de acesso</th>
              <th class="th-button"></th>
              <th class="th-button"></th>
            </tr>
          </thead>
          <tbody>
            {% for role in roles %}
            <tr>
              <td>{{ role.description }}</td>
              <td>{{ role.name }}</td>
              <td>{{ role.access_level }}</td>
              <td><a class="btn btn-xs btn-default" href="{{ base_url() }}/admin/role/edit/{{ role.id }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
              </a></td>
              <td><a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/role/delete/{{ role.id }}">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
              </a></td>
            </tr>
            {% endfor %}
          </tbody>
          </table>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem cargos cadastrados</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>



{% endblock %}
