{% extends "admin/layout.twig" %}
{% block html_title %}Tipos de Cliente{{ parent() }}{% endblock %}
{% set nav_active = 'clientes' %}
{% set subnav_active = 'cliente_tipos' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Tipos de Clientes</li>
</ol>
{% endblock %}
{% block content %}
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <a class="btn btn-success" href="{{ base_url() }}/admin/tipos_de_cliente/add">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Cadastrar
    </a>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading" >
    <div class="row">
      <div class="col-xs-8 col-sm-8">
        <p class="panel-title">Tipos de Clientes</p>
      </div>
    </div>
  </div>
  <div class="panel-body">

    <div class="row">
      <div class="col-xs-12">
        {% if tipos_de_cliente %}
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th class="hidden-xs">Nome</th>
                  <th class="hidden-xs hidden-sm">Slug</th>
                  <th class="hidden-xs hidden-sm">Descrição</th>
                  <th style="max-width:100px; text-align:center;"> Ações</th>
                  {# <th class="th-button" style="width:100px;"></th> #}
                </tr>
              </thead>
              <tbody>
                {% for tipo_de_cliente  in tipos_de_cliente %}
                <tr>
                  <td>{{ tipo_de_cliente.id }}</td>
                  <td>
                    <a href="{{ base_url() }}/admin/tipos_de_cliente/{{ tipos_de_cliente.id }}">
                      {{ tipo_de_cliente.name }}
                    </a>
                  </td>
                  <td class="hidden-xs">{{ tipo_de_cliente.slug }}</td>
                  <td class="hidden-xs">{{ tipo_de_cliente.description }}</td>


                  <td style="max-width:100px;">

                      <center>
                        <a class="btn btn-sm btn-default" style="margin-top:2px; margin-bottom:2px;" href="{{ base_url() }}/admin/tipos_de_cliente/edit/{{ tipo_de_cliente.id }}">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        <a class="btn btn-sm btn-danger" style="margin-top:2px; margin-bottom:2px;" href="{{ base_url() }}/admin/tipos_de_cliente/delete/{{ tipo_de_cliente.id }}">
                          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                      </center>

                  </td>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem tipos de clientes cadastrados</div>
        {% endif %}
      </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
          <ul class="pager">
            <li{% if page == 1 %} class="disabled"{% endif %}>
              <a{% if page > 1 %} href="{{ base_url() }}/admin/tipos_de_cliente?page={{ page - 1 }}"{% endif %}>Anterior</a>
            </li>
            <li{% if page >= amountPages %} class="disabled"{% endif %}>
              <a{% if page < amountPages %} href="{{ base_url() }}/admin/tipos_de_clientepage={{ page + 1 }}"{% endif %}>Próximo</a>
            </li>
          </ul>
        </div>
    </div>
  </div>
</div>



{% endblock %}
{% block javascripts %}
  {% endblock %}
