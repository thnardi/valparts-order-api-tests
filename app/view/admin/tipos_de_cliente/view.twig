{% extends "admin/layout.twig" %}
{% block html_title %}{{ user.name }} - Usuários - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'clientes' %}
{% set subnav_active = 'clientes' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/tipos_de_cliente">Usuários</a></li>
  <li class="active">{{ user.name }}</li>
</ol>
{% endblock %}
{% block content %}


  <div class="pull-right">
    <a class="btn btn-primary" href="{{ base_url() }}/admin/tipos_de_cliente/edit/{{ user.id }}">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a class="btn btn-danger" href="{{ base_url() }}/admin/tipos_de_cliente/delete/{{ user.id }}">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
  </div>
  <h1>{{ user.name }}</h1>


<div class="row">
  <div class="col-md-10">
    <ul class="list-group">
      <li class="list-group-item">Nome: <strong>{{ user.name }}</strong></li>
      <li class="list-group-item">Descrição: <strong>{{ user.description }}</strong></li>
      <li class="list-group-item">Slug: <strong>{{ user.slug }}</strong></li>

    </ul>
  </div>

</div>

{% endblock %}
