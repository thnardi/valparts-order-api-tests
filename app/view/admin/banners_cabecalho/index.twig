{% extends "admin/layout.twig" %}
{% block html_title %}banners - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'banners_cabecalho' %}
{% set subnav_active = 'banners_cabecalho' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Banners Cabeçalho</li>
</ol>
{% endblock %}
{% block content %}
<div class="panel panel-default">
  <div class="panel-heading" >
    <div class="row">
      <div class="col-xs-12">
        <p class="panel-title">banners</p>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-12">
        {% if banners %}
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width:50px;">ID</th>
                  <th>Imagem Desktop</th>
                  <th>Imagem Mobile</th>
                  <th>Nome</th>
                  {# <th style="width:150px; text-align:center;">Posição do Título</th> #}
                  <th class="th-button" style="width:100px; text-align:center;">Ações</th>
                </tr>
              </thead>
              <tbody>
                {% for banner in banners %}
                  <tr>
                    <td style="width:50px;">
                      {{ banner.id }}
                    </td>
                    <td style="width:350px;">
                      <div class="row">
                        <div class="col-xs-6">
                          <strong><img src="{{ base_url() }}/{{ banner.img_featured }}" style="width:100%"></strong>
                        </div>
                      </div>
                    </td>
                    <td style="width:350px;">
                      <div class="row">
                        <div class="col-xs-6">
                          <strong><img src="{{ base_url() }}/{{ banner.img_mobile }}" style="width:100%"></strong>
                        </div>
                      </div>
                    </td>
                    <td>
                      {{ banner.name }}
                    </td>
                    {# <td style="width:150px; text-align:center;">
                      {% if banner.title_position == 1 %}Esquerda{% endif %}
                      {% if banner.title_position == 2 %}Centro{% endif %}
                      {% if banner.title_position == 3 %}Direita{% endif %}
                    </td> #}
                    <td style="width:100px;">
                      <center>
                        <a class="btn btn-sm btn-default" style="margin-top:2px; margin-bottom:2px;" href="{{ base_url() }}/admin/banners_cabecalho/{{ banner.id }}">
                          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>

                      </center>
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        {% else %}
          <div class="alert alert-danger" role="alert">Não existem banners cadastrados</div>
        {% endif %}
      </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
          <ul class="pager">
            <li{% if page == 1 %} class="disabled"{% endif %}>
              <a{% if page > 1 %} href="{{ base_url() }}/admin/banners?page={{ page - 1 }}"{% endif %}>Anterior</a>
            </li>
            <li{% if page >= amountPages %} class="disabled"{% endif %}>
              <a{% if page < amountPages %} href="{{ base_url() }}/admin/banners?page={{ page + 1 }}"{% endif %}>Próximo</a>
            </li>
          </ul>
        </div>
    </div>
  </div>
</div>

{% endblock %}
